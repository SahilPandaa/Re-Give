  <script>
  document.getElementById("volunteerForm").addEventListener("submit", async function (e) {
    e.preventDefault();

    const formData = Object.fromEntries(new FormData(this).entries());
    const popup = document.getElementById("popup");

    try {
      const res = await fetch("/join-team", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(formData),
      });

      const data = await res.json();

      popup.textContent = data.success
        ? "‚úÖ We will contact you shortly!"
        : "‚ùå Failed to submit. Try again!";

      popup.style.background = data.success ? "#22c55e" : "#ef4444";
      popup.style.display = "block";
      popup.style.opacity = "1";

      if (data.success) this.reset();

      setTimeout(() => {
        popup.style.opacity = "0";
        setTimeout(() => (popup.style.display = "none"), 300);
      }, 3000);
    } catch (err) {
      console.error(err);
      popup.textContent = "‚ùå Something went wrong!";
      popup.style.background = "#ef4444";
      popup.style.display = "block";
      popup.style.opacity = "1";
      setTimeout(() => {
        popup.style.opacity = "0";
        setTimeout(() => (popup.style.display = "none"), 300);
      }, 3000);
    }
  });
  </script>


