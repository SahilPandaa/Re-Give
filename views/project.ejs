    <!-- Join Team Section -->
    <section class="join" id="join">
        <div class="container">
            <div class="section-title">
                <h2>Join Our Team</h2>
                <p>Become part of ReGive and make a difference in our community</p>
            </div>
            <div class="join-form">
                <form id="volunteerForm ">
                    <div class="form-group">
                        <input type="text" id="name" name="name" required placeholder="YOUR NAME">
                    </div>
                    <div class="form-group">
                        <input type="email" id="email" name="email" required  placeholder="EMAIL">
                    </div>
                    <div class="form-group">
                        <input type="tel" id="phone" name="phone" required placeholder="PHONE NUMBER">
                    </div>
                    <div class="form-group ">
                        <input type="text" id="department" name="department" required placeholder="DEPARTMENT">
                    </div>
                    <div class="form-group">
                        <label for="year">Year of Study</label>
                        <select id="year" name="year" required>
                            <option value="">Select Year</option>
                            <option value="1">First Year</option>
                            <option value="2">Second Year</option>
                            <option value="3">Third Year</option>
                            <option value="4">Fourth Year</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="interest">Area of Interest</label>
                        <select id="interest" name="interest" required>
                            <option value="">Select Interest</option>
                            <option value="collection">Collection Team</option>
                            <option value="sorting">Sorting Team</option>
                            <option value="distribution">Distribution Team</option>
                            <option value="awareness">Awareness Campaigns</option>
                            <option value="event">Event Management</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="message">Why do you want to join ReGive?</label>
                        <textarea id="message" name="message" required></textarea>
                    </div>
                    <button type="submit" class="btn">Submit Application</button>
                </form>
            </div>
        </div>
    </section>

