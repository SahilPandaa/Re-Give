      <p>Your generosity can change lives in our community</p>
    </div>

    <!-- ‚úÖ Added form -->
    <form id="donationForm" action="/donate" method="POST">
      <div class="donation-box">
        <h3>What items can you donate?</h3>
        <p>We accept gently used clothing, books, stationery, electronics, and household items.</p>
        
        <div class="donation-options">
          <div class="form-group">
            <label><input type="checkbox" name="items" value="clothes"> Clothing</label>
          </div>
          <div class="form-group">
            <label><input type="checkbox" name="items" value="books"> Books</label>
          </div>
          <div class="form-group">
            <label><input type="checkbox" name="items" value="electronics"> Electronics</label>
          </div>
          <div class="form-group">
            <label><input type="checkbox" name="items" value="kitchen"> Kitchen Utensils</label>
          </div>
          <div class="form-group">
            <label><input type="checkbox" name="items" value="stationery"> Stationery</label>
          </div>
          <div class="form-group">
            <label><input type="checkbox" name="items" value="other"> Other</label>
            <input type="text" name="other_items" placeholder="Specify other items">
          </div>
        </div>

        <h3 style="margin-top: 40px;">Your Details</h3>
        <div class="form-group">
          <input type="text" id="donor_name" name="donor_name" required placeholder="NAME">
        </div>
        <div class="form-group">
          <input type="tel" id="donor_contact" name="donor_contact" required placeholder="CONTACT NUMBER">
        </div>

        <div class="form-group">
          <label for="pickup">Preferred Pickup Location</label>
          <select id="pickup" name="pickup" required onchange="toggleOtherLocation()">
            <option value="">Select Location</option>
            <option value="campus">GIET University Campus</option>
            <option value="gunupur_town">Gunupur Town</option>
            <option value="rayagada">Rayagada</option>
            <option value="other">Please Specify The Item</option>
          </select>
        </div>

        <!-- Hidden text input for custom location -->
        <div class="form-group" id="otherLocationGroup" style="display: none;">
          <input type="text" id="other_location" name="other_location" placeholder="Enter your location">
        </div>

        <button type="submit" class="btn1">Submit Donation Details</button>
      </div>
    </form>
  </div>
</section>

<script>
function toggleOtherLocation() {
  const pickup = document.getElementById("pickup").value;
  const otherGroup = document.getElementById("otherLocationGroup");
  otherGroup.style.display = pickup === "other" ? "block" : "none";
}
</script>

