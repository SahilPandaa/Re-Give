        <a href="/logout" class="block p-6 bg-red-100 rounded-2xl hover:bg-red-200 transition">
          <h3 class="text-lg font-semibold text-red-700">Logout</h3>
          <p class="text-gray-600 text-sm mt-2">
            End your current session and go back to home.
          </p>
        </a>

      </div>
    </div>
  </main>

  <script>
  // âœ… Detect query param from redirect
  const params = new URLSearchParams(window.location.search);
  const success = params.get("success");

  if (success) {
    const popup = document.getElementById("popup");

    if (success === "true") {
      popup.textContent = "âœ… Donation submitted successfully!";
      popup.style.background = "#4caf50"; // green
    } else {
      popup.textContent = "âŒ Failed to submit donation. Try again!";
      popup.style.background = "#f44336"; // red
    }

    popup.style.display = "block";
    popup.style.opacity = "1";

    // Hide after 3 seconds
    setTimeout(() => {
      popup.style.opacity = "0";
      setTimeout(() => popup.style.display = "none", 300);
    }, 3000);
  }

</script>


