<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Ongoing Events | Admin</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link
    rel="shortcut icon"
    href="https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/0e7d49ef-31f4-4759-82b9-b486dc7aa23f.png"
    type="image/x-icon"
  />
</head>
<body class="bg-gray-900 text-gray-100 min-h-screen">
  <!-- Header -->
  <header class="bg-gray-800 border-b border-gray-700 p-4 flex justify-between items-center">
    <h1 class="text-2xl font-bold text-green-400">Ongoing Events</h1>
    <a href="/admin/dashboard" class="text-sm text-gray-300 hover:text-green-400">â† Back to Dashboard</a>
  </header>

  <!-- Main Content -->
  <main class="p-6">
    <% if (events.length === 0) { %>
      <p class="text-center text-gray-400">No ongoing events right now.</p>
    <% } else { %>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% events.forEach(event => { %>
          <div class="bg-gray-800 rounded-xl shadow-lg border border-gray-700 overflow-hidden hover:border-green-400 transition">
            <img src="<%= event.imageUrl %>" alt="<%= event.title %>" class="w-full h-48 object-cover">
            <div class="p-6">
              <h3 class="text-xl font-semibold text-white mb-2"><%= event.title %></h3>
              <p class="text-gray-400 mb-2"><i class="far fa-calendar-alt"></i> <%= event.date %></p>
              <p class="text-gray-300 mb-4"><%= event.description %></p>

              <div class="flex gap-3">
                <button 
                  class="view-participants bg-green-500 hover:bg-green-600 text-black px-4 py-2 rounded-md font-medium transition"
                  data-eventid="<%= event._id %>">
                  ğŸ‘¥ View Participants
                </button>

                <button 
                  class="delete-event bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md font-medium transition"
                  data-eventid="<%= event._id %>">
                  ğŸ—‘ Delete
                </button>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </main>

  <!-- Participants Modal -->
  <div id="participantModal" class="fixed inset-0 bg-black/70 flex items-center justify-center hidden z-50">
    <div class="bg-gray-800 rounded-xl shadow-xl w-full max-w-lg p-6 relative">
      <button id="closeModal" class="absolute top-3 right-3 text-gray-400 hover:text-white">âœ–</button>
      <h2 class="text-xl font-bold text-green-400 mb-4">Registered Participants</h2>
      <div id="participantList" class="text-gray-200 space-y-3"></div>
    </div>
  </div>

  <!-- Script -->
  <script>
    const modal = document.getElementById("participantModal");
    const closeModal = document.getElementById("closeModal");
    const participantList = document.getElementById("participantList");

    // View Participants
    document.querySelectorAll(".view-participants").forEach(button => {
      button.addEventListener("click", async () => {
        const eventId = button.dataset.eventid;
        try {
          const res = await fetch(`/admin/event/${eventId}/participants`);
          const data = await res.json();

          participantList.innerHTML = "";
          if (!data.success) {
            participantList.innerHTML = `<p class="text-red-400">${data.message || "Failed to load participants."}</p>`;
          } else if (data.participants.length === 0) {
            participantList.innerHTML = `<p class="text-gray-400">No participants registered yet.</p>`;
          } else {
            data.participants.forEach(p => {
              participantList.innerHTML += `
                <div class="border border-gray-700 p-3 rounded-md">
                  <p><strong>Name:</strong> ${p.name}</p>
                  <p><strong>Email:</strong> ${p.email}</p>
                  <p><strong>Contact:</strong> ${p.contact}</p>
                </div>`;
            });
          }
          modal.classList.remove("hidden");
        } catch (err) {
          participantList.innerHTML = `<p class="text-red-400">Failed to load participants.</p>`;
          modal.classList.remove("hidden");
        }
      });
    });

    closeModal.addEventListener("click", () => modal.classList.add("hidden"));

    // Delete Event
    document.querySelectorAll(".delete-event").forEach(button => {
      button.addEventListener("click", async () => {
        const eventId = button.dataset.eventid;
        const confirmed = confirm("Are you sure you want to delete this event?");
        if (!confirmed) return;

        try {
          const res = await fetch(`/admin/delete-event/${eventId}`, { method: "DELETE" });
          const data = await res.json();

          if (data.success) {
            alert("âœ… Event deleted successfully!");
            location.reload();
          } else {
            alert("âŒ Failed to delete event: " + (data.message || "Unknown error"));
          }
        } catch (err) {
          alert("âŒ Server error while deleting event.");
          console.error(err);
        }
      });
    });
  </script>
</body>
</html>
